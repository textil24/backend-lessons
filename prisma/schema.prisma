generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(uuid())
  name        String
  category    String
  description String
  preview     String
  createdAt   String
  updatedAt   String
  lessons     Lesson[]
}

model Lesson {
  id           String  @id @default(uuid())
  name         String
  content      Json
  orderBy      Int
  nextLessonId String?
  prevLessonId String?
  createdAt    String
  updatedAt    String
  course       Course  @relation(fields: [courseId], references: [id])
  courseId     String
}
